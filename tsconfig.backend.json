{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ES2020"],
    "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "server.ts",
    "controllers/**/*",
    "routes/**/*",
    "services/**/*",
    "models/**/*",
    "types/**/*"
  ],
  "exclude": ["src", "node_modules", "dist", "tests"]
}
